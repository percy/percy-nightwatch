extends: standard
env:
  node: true
rules:
  prefer-const: off
  no-unused-expressions: off
  promise/param-names: off
  semi: [error, always]
  space-before-function-paren:
    - error
    - anonymous: never
      asyncArrow: always
      named: never
overrides:
  - files:
      - "test/**/*.test.js"
    env:
      mocha: true
    rules:
      node/no-callback-literal: off
