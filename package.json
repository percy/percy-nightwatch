{
  "name": "@percy/nightwatch",
  "version": "1.0.2",
  "description": "Percy.io integration with Nightwatch",
  "main": "dist/percySnapshot.js",
  "types": "dist/percySnapshot.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/percy/percy-nightwatch.git"
  },
  "keywords": [
    "nightwatch",
    "testing"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "author": "Perceptual Inc.",
  "license": "MIT",
  "devDependencies": {
    "@percy/tslint": "^1.0.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "chromedriver": "^2.44.1",
    "http-server": "^0.11.1",
    "nightwatch": "^1.0.14",
    "selenium-server": "^3.141.59",
    "semantic-release": "^15.13.3",
    "typescript": "^3.1.6"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "pretest": "npm run build",
    "test": "percy exec -- nightwatch",
    "test-win": "npm run pretest && percy exec -- nightwatch.cmd"
  },
  "peerDependencies": {},
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@percy/agent": "^0.1.7"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
