{
  "name": "@percy/nightwatch",
  "description": "Nightwatch client library for visual testing with Percy",
  "version": "2.2.1",
  "license": "MIT",
  "author": "Perceptual Inc.",
  "repository": "https://github.com/percy/percy-nightwatch",
  "keywords": [
    "nightwatch",
    "percy",
    "visual testing"
  ],
  "main": "commands/percySnapshot.js",
  "types": "types/percySnapshot.d.ts",
  "files": [
    "commands/percySnapshot.js",
    "lib",
    "types/percySnapshot.d.ts"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "yarn test:unit && yarn test:nightwatch",
    "test:unit": "mocha \"test/unit/**/*.test.js\"",
    "test:nightwatch": "cross-env MOZ_HEADLESS=1 percy exec --testing -- nightwatch",
    "test:coverage": "nyc yarn test:unit",
    "test:types": "tsd"
  },
  "dependencies": {
    "@percy/sdk-utils": "^1.31.4",
    "@percy/selenium-webdriver": "^2.2.3"
  },
  "peerDependencies": {
    "nightwatch": ">=1 || >=2 || >=3"
  },
  "devDependencies": {
    "@percy/cli": "^1.31.4",
    "cross-env": "^10.1.0",
    "eslint": "^7.11.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "expect": "^30.2.0",
    "mocha": "^11.7.5",
    "nightwatch": "^3.12.3",
    "nyc": "^17.1.0",
    "tsd": "^0.33.0"
  }
}
